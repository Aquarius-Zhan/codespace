/* pages/alarms/alarms.wxss */

.container {
  padding: 30rpx;
  min-height: 100vh;
  background: linear-gradient(135deg, #f5f5f5 0%, #ffffff 100%);
  display: flex;
  flex-direction: column;
}

.header {
  text-align: center;
  margin-bottom: 60rpx;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: var(--primary-color, #1976D2);
  display: block;
}

/* 主要操作区域 - 居中显示大按钮 */
.main-action-area {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 60rpx;
  padding: 40rpx 0;
}

.add-alarm-btn {
  background: linear-gradient(135deg, var(--primary-color, #1976D2) 0%, #1565C0 100%);
  border-radius: 30rpx;
  padding: 50rpx 80rpx;
  text-align: center;
  box-shadow: 0 8rpx 30rpx rgba(25, 118, 210, 0.4);
  min-width: 500rpx;
  min-height: 200rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: relative;
  border: 3rpx solid rgba(255, 255, 255, 0.3);
  transition: all 0.3s ease;
}

/* 按钮悬停和点击效果 */
.button-hover {
  transform: scale(0.95);
  box-shadow: 0 4rpx 20rpx rgba(25, 118, 210, 0.6);
  background: linear-gradient(135deg, #1565C0 0%, var(--primary-color, #1976D2) 100%);
}

.button-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
  animation: pulse 2s infinite;
}

.add-text {
  color: white;
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 12rpx;
  letter-spacing: 2rpx;
}

.add-subtitle {
  color: rgba(255, 255, 255, 0.9);
  font-size: 28rpx;
  font-weight: 400;
  opacity: 0.9;
}

/* 脉冲动画效果 */
@keyframes pulse {
  0% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.05);
  }
  100% {
    transform: scale(1);
  }
}

.alarm-list {
  flex: 1;
  width: 100%;
}

.alarm-item {
  background: white;
  border-radius: 20rpx;
  padding: 35rpx;
  margin-bottom: 25rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  display: flex;
  justify-content: space-between;
  align-items: center;
  transition: all 0.3s ease;
  border: 1rpx solid rgba(0, 0, 0, 0.05);
}

.alarm-item:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.15);
}

.alarm-content {
  flex: 1;
}

.alarm-time {
  font-size: 52rpx;
  font-weight: bold;
  color: var(--text-primary, #212121);
  margin-bottom: 10rpx;
  display: block;
  letter-spacing: 1rpx;
}

.alarm-label {
  font-size: 32rpx;
  color: var(--text-primary, #212121);
  margin-bottom: 8rpx;
  display: block;
  font-weight: 500;
}

.alarm-repeat {
  font-size: 26rpx;
  color: var(--text-secondary, #757575);
  display: block;
  background: rgba(25, 118, 210, 0.1);
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
  display: inline-block;
  margin-top: 6rpx;
}

.alarm-controls {
  display: flex;
  align-items: center;
  space-x: 25rpx;
  gap: 25rpx;
}

.alarm-switch {
  margin-right: 25rpx;
}

.alarm-switch switch {
  transform: scale(1.2);
}

.delete-btn {
  padding: 20rpx;
  background: var(--error-color, #F44336);
  border-radius: 50%;
  width: 70rpx;
  height: 70rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(244, 67, 54, 0.3);
  transition: all 0.3s ease;
}

.delete-btn:active {
  transform: scale(0.9);
  box-shadow: 0 2rpx 8rpx rgba(244, 67, 54, 0.4);
}

.delete-icon {
  font-size: 32rpx;
}

.empty-state {
  text-align: center;
  padding: 120rpx 40rpx;
}

.empty-icon {
  font-size: 120rpx;
  display: block;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 36rpx;
  color: var(--text-secondary, #757575);
  display: block;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.empty-hint {
  font-size: 28rpx;
  color: var(--text-secondary, #757575);
  display: block;
  opacity: 0.8;
}