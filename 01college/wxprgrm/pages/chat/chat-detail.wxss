/* pages/chat/chat-detail.wxss */
/* 聊天详情页面样式 - 老年人友好型设计 */

page {
  background-color: var(--background-secondary);
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

/* 输入区域 */
.input-area {
  background-color: var(--background-primary);
  border-top: 2rpx solid var(--border-color);
  padding: 20rpx 30rpx;
  padding-bottom: calc(20rpx + constant(safe-area-inset-bottom));
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
}

.input-toolbar {
  display: flex;
  align-items: center;
  gap: 20rpx;
  min-height: 88rpx;
}

.tool-btn {
  width: 88rpx;
  height: 88rpx;
  background-color: var(--background-secondary);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.tool-btn:active {
  transform: translateY(4rpx);
  background-color: rgba(25, 118, 210, 0.05);
}

.send-btn {
  width: 88rpx;
  height: 88rpx;
  background: linear-gradient(135deg, var(--primary-color), #1565C0);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.send-btn:active {
  transform: rotate(90deg) translateY(4rpx);
}

.more-panel {
  position: absolute;
  bottom: 120rpx;
  left: 0;
  right: 0;
  width: 100%;
  background: var(--background-primary);
  border-radius: 40rpx 40rpx 0 0;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  transform: translateY(100%);
  transition: all 0.3s ease;
}

.more-panel.show {
  transform: translateY(0);
}

.message-list {
  flex: 1;
  padding: 20rpx 30rpx;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
}

/* 消息气泡 */
.message-item {
  margin-bottom: 30rpx;
  position: relative;
  animation: fadeInUp 0.5s ease;
}

.message.received {
  display: flex;
  align-items: flex-start;
}

.message.sent {
  display: flex;
  justify-content: flex-end;
  align-items: flex-end;
}

.message-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin: 0 20rpx;
  border: 2rpx solid var(--border-color);
}

.message-bubble {
  max-width: 100%;
  border-radius: 20rpx;
  padding: 24rpx 30rpx;
  position: relative;
}

.message-text {
  font-size: 32rpx;
  line-height: 1.6;
  word-wrap: break-word;
  word-break: break-all;
}

.message-image {
  max-width: 400rpx;
  border-radius: 12rpx;
  margin: -8rpx 0;
}

.message-voice {
  display: flex;
  align-items: center;
  gap: 20rpx;
  min-width: 160rpx;
  padding: 16rpx;
  border-radius: 12rpx;
  transition: all 0.3s ease;
}

.voice-duration {
  font-size: 28rpx;
  color: var(--text-secondary);
}

.message-location {
  display: flex;
  align-items: center;
  gap: 20rpx;
  min-width: 200rpx;
  padding: 16rpx;
  border-radius: 12rpx;
  transition: all 0.3s ease;
}

.location-name {
  font-size: 30rpx;
  font-weight: 500;
  color: var(--text-primary);
}

.location-address {
  font-size: 26rpx;
  color: var(--text-secondary);
}

.message-status {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  gap: 12rpx;
  margin-top: 12rpx;
}

.message-time {
  font-size: 26rpx;
  color: var(--text-secondary);
}

.message-read {
  display: flex;
  align-items: center;
}

/* 日期分隔符 */
.date-separator {
  display: flex;
  align-items: center;
  margin: 40rpx 0;
}

.date-text {
  font-size: 26rpx;
  color: var(--text-secondary);
  background-color: var(--background-primary);
  padding: 12rpx 30rpx;
  border-radius: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

/* 系统消息 */
.system-message {
  display: flex;
  justify-content: center;
  margin: 40rpx 0;
  padding: 20rpx 40rpx;
  background-color: var(--background-primary);
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.system-text {
  font-size: 32rpx;
  color: var(--text-primary);
  line-height: 1.5;
}

/* 语音提示按钮 */
.voice-hint-btn {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background: rgba(0, 0, 0, 0.8);
  border-radius: 20rpx;
  padding: 40rpx 60rpx;
  z-index: 1000;
  animation: fadeIn 0.3s ease;
}

.voice-hint-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20rpx;
}

.voice-hint-content text {
  font-size: 32rpx;
  color: white;
}

/* 可访问性增强 - 暂时移除不支持的媒体查询 */
.action-btn:active,
.tool-btn:active,
.send-btn:active,
.more-item:active,
.quick-reply-item:active,
.detail-action-btn:active,
.setting-item:active {
  transform: none;
}

.confidence-fill {
  transition: none;
}

/* 安全区域适配 */
.safe-area {
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
}